{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "dist",
        "target": "ES2018",
        "module": "commonjs",
        "allowJs": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": ["esnext"],
        "esModuleInterop": true
    },
    "include": [
        "src/**/**.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}